{
  "name": "000",
  "version": "0.1.0",
  "description": "CRUDkit - Modern Next.js starter with PWA, theming, and interactive components",
  "keywords": [
    "nextjs",
    "react",
    "pwa",
    "tailwindcss",
    "daisyui",
    "starter",
    "dice",
    "gaming",
    "drag-drop",
    "interactive",
    "component-library"
  ],
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "cp docs/spec-kit/TASKS.md public/TASKS.md && node scripts/generate-deployment-history.js",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "prepare": "husky",
    "lint:staged": "lint-staged",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "web-vitals": "^5.1.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/eslintrc": "^3.3.1",
    "@storybook/addon-docs": "^9.1.5",
    "@storybook/addon-links": "^9.1.5",
    "@storybook/addon-onboarding": "^9.1.5",
    "@storybook/addon-themes": "^9.1.5",
    "@storybook/nextjs": "^9.1.5",
    "@storybook/react": "^9.1.5",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.19.14",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "daisyui": "beta",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.5.2",
    "eslint-plugin-storybook": "^9.1.5",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "pa11y": "^9.0.0",
    "pa11y-ci": "^4.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "storybook": "^9.1.5",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "vitest related --run"
    ],
    "*.{css,md,json}": "prettier --write"
  }
}
